<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">false</item>

    </style>

    <style name="CustomDialogStyle">
        <item name="android:layout_marginEnd">10sp</item>
        <item name="android:layout_marginStart">10sp</item>
    </style>

    <style name="CustomBorderlessNumberButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">1sp</item>
        <item name="android:background">@drawable/button_number</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:padding">0sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
    </style>

    <style name="CustomDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider</item>
        <item name="android:layout_marginBottom">15sp</item>
        <item name="android:layout_marginTop">15sp</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="CustomStatsTitle">
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">@dimen/text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomStatsNumber">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/zero</item>
    </style>

    <style name="CustomGameDivider" parent="CustomDivider">
        <item name="android:layout_marginBottom">15sp</item>
        <item name="android:layout_marginTop">15sp</item>
    </style>

    <style name="CustomGameDividerVertical">
        <item name="android:layout_width">@dimen/divider</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">15sp</item>
        <item name="android:layout_marginEnd">15sp</item>
        <item name="android:background">@color/divider</item>
    </style>

</resources>
